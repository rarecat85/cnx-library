rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // users 컬렉션 규칙
    match /users/{userId} {
      // 읽기: 자신의 문서만 읽을 수 있음
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // 쓰기: 자신의 문서만 쓸 수 있음 (회원가입 시에는 인증되지 않은 상태이므로 제외)
      // 하지만 이메일 인증 완료 후 업데이트는 Functions를 통해 처리하므로
      // 여기서는 기본적으로 자신의 문서만 쓸 수 있도록 설정
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // 회원가입 시에는 인증되지 않은 상태이므로, Functions를 통해 생성해야 함
      // 또는 회원가입 시에는 이미 로그인된 상태이므로 위 규칙으로 충분
    }
    
    // books 컬렉션 규칙
    match /books/{bookId} {
      // 읽기: 모든 인증된 사용자
      allow read: if request.auth != null;
      
      // 쓰기: 관리자(role: 'admin' 또는 'manager')만 가능
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager');
    }
    
    // bookRequests 컬렉션 규칙 (도서 신청)
    match /bookRequests/{requestId} {
      // 읽기: 모든 인증된 사용자 (신청된 도서 확인용)
      allow read: if request.auth != null;
      
      // 생성: 모든 인증된 사용자 (도서 신청)
      allow create: if request.auth != null;
      
      // 업데이트/삭제: 관리자만 가능 (승인/거절 처리)
      allow update, delete: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager');
    }
    
    // 다른 컬렉션은 기본적으로 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

