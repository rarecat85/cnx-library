rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // users 컬렉션 규칙
    match /users/{userId} {
      // 읽기: 자신의 문서만 읽을 수 있음
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // 쓰기: 자신의 문서만 쓸 수 있음 (회원가입 시에는 인증되지 않은 상태이므로 제외)
      // 하지만 이메일 인증 완료 후 업데이트는 Functions를 통해 처리하므로
      // 여기서는 기본적으로 자신의 문서만 쓸 수 있도록 설정
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // 회원가입 시에는 인증되지 않은 상태이므로, Functions를 통해 생성해야 함
      // 또는 회원가입 시에는 이미 로그인된 상태이므로 위 규칙으로 충분
    }
    
    // 다른 컬렉션은 기본적으로 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

