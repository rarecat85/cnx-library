rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // users 컬렉션 규칙
    match /users/{userId} {
      // 읽기: 자신의 문서 또는 관리자는 모든 사용자 문서 읽기 가능
      allow read: if request.auth != null && 
        (request.auth.uid == userId ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager');
      
      // 쓰기: 자신의 문서만 쓸 수 있음
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // books 컬렉션 규칙
    match /books/{bookId} {
      // 읽기: 모든 인증된 사용자
      allow read: if request.auth != null;
      
      // 쓰기: 관리자(role: 'admin' 또는 'manager')만 가능
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager');
    }
    
    // bookRequests 컬렉션 규칙 (도서 신청)
    match /bookRequests/{requestId} {
      // 읽기: 모든 인증된 사용자 (신청된 도서 확인용)
      allow read: if request.auth != null;
      
      // 생성: 모든 인증된 사용자 (도서 신청)
      allow create: if request.auth != null;
      
      // 업데이트/삭제: 관리자만 가능 (승인/거절 처리)
      allow update, delete: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager');
    }
    
    // rentalHistory 컬렉션 규칙 (대여 이력)
    match /rentalHistory/{historyId} {
      // 읽기: 자신의 대여 이력만 읽기 가능
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // 생성: 자신의 대여 이력만 생성 가능
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // 업데이트: 자신의 대여 이력만 수정 가능
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // 삭제: 자신의 대여 이력만 삭제 가능
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // 다른 컬렉션은 기본적으로 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

