rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 서가 이미지 업로드 규칙
    match /shelves/{fileName} {
      // 읽기: 모든 인증된 사용자
      allow read: if request.auth != null;
      
      // 쓰기(업로드/삭제): 인증된 사용자 (관리자 체크는 앱에서 처리)
      allow write: if request.auth != null;
    }
    
    // 기타 파일은 거부
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
